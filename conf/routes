# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                     controllers.Application.angular

# Состояния работоспособности сервера
GET           /connection/status                    controllers.Application.serverStatus

# Сотрудники
GET           /employees/template                   controllers.Employees.template
GET           /employees/list                       controllers.Employees.list
GET           /employees/json/list                  controllers.Employees.jsonList
GET           /employees/json/get                   controllers.Employees.jsonGet(id: Long)
GET           /employees/create                     controllers.Employees.newEmployee
GET           /employees/show                       controllers.Employees.show
POST          /employees/save                       controllers.Employees.save
GET           /employees/json/family                controllers.Relationships.jsonEmployeeFamily(employeeId: Long)

# Состав семьи
GET           /relationships/list                   controllers.Relationships.list
GET           /relationships/show                   controllers.Relationships.show
POST          /relationships/save                   controllers.Relationships.save
PUT           /relationships/update                 controllers.Relationships.update
DELETE        /relationships/delete                 controllers.Relationships.delete(id: Long)
GET           /relationships/json/list              controllers.Relationships.jsonList

GET           /relationship_types/create            controllers.RelationshipTypes.create
GET           /relationship_types/list              controllers.RelationshipTypes.list
GET           /relationship_types/json/list         controllers.RelationshipTypes.jsonList
POST          /relationship_types/save              controllers.RelationshipTypes.save

GET           /positions/create                     controllers.Positions.create
GET           /positions/list                       controllers.Positions.list
GET           /positions/json/list                  controllers.Positions.jsonList
POST          /positions/save                       controllers.Positions.save

GET           /position_categories/create           controllers.PositionCategories.create
GET           /position_categories/list             controllers.PositionCategories.list
GET           /position_categories/json/list        controllers.PositionCategories.jsonList
POST          /position_categories/save             controllers.PositionCategories.save

GET           /office_types/create                  controllers.OfficeTypes.create
GET           /office_types/list                    controllers.OfficeTypes.list
GET           /office_types/json/list               controllers.OfficeTypes.jsonList
POST          /office_types/save                    controllers.OfficeTypes.save

GET           /offices/create                       controllers.Offices.create
GET           /offices/list                         controllers.Offices.list
GET           /offices/json/list                    controllers.Offices.jsonList
POST          /offices/save                         controllers.Offices.save

GET           /departments/create                   controllers.Departments.create
GET           /departments/list                     controllers.Departments.list
GET           /departments/json/list                controllers.Departments.jsonList
POST          /departments/save                     controllers.Departments.save

GET           /contract_types/create                controllers.ContractTypes.create
GET           /contract_types/list                  controllers.ContractTypes.list
GET           /contract_types/json/list             controllers.ContractTypes.jsonList
POST          /contract_types/save                  controllers.ContractTypes.save

GET           /contracts/create                     controllers.Contracts.create
GET           /contracts/list                       controllers.Contracts.list
GET           /contracts/json/list                  controllers.Contracts.jsonList
POST          /contracts/save                       controllers.Contracts.save

GET           /institutions/create                  controllers.Institutions.create
GET           /institutions/list                    controllers.Institutions.list
GET           /institutions/json/list               controllers.Institutions.jsonList
POST          /institutions/save                    controllers.Institutions.save

GET           /educations/create                    controllers.Educations.create
GET           /educations/list                      controllers.Educations.list
GET           /educations/json/list                 controllers.Educations.jsonList
POST          /educations/save                      controllers.Educations.save
PUT           /educations/update        controllers.Educations.update
DELETE        /educations/delete        controllers.Educations.delete(id: Long)

# Webjar plugin included.
GET           /webjars/*file                        controllers.WebJarAssets.at(file)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                         controllers.Assets.at(path="/public", file)

    